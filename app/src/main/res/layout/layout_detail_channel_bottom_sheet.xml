<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_rounded_corners"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view3"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_channel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/delete"
        android:textStyle="bold"
        android:textColor="#EA0808"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/identifier_channel_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/identifier_channel_text_view"
        app:layout_constraintTop_toBottomOf="@+id/identifier_channel_text_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/channel_name"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="@color/pantone_primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        tools:text="MyChannel" />

    <TextView
        android:id="@+id/created_date_channel_text_view"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/channel_name"
        app:layout_constraintStart_toStartOf="@+id/channel_name"
        app:layout_constraintTop_toBottomOf="@+id/channel_name"
        tools:text="Channel created: 16 aug. 2020" />

    <TextView
        android:id="@+id/clip_count_text_view"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/created_date_channel_text_view"
        app:layout_constraintStart_toStartOf="@+id/created_date_channel_text_view"
        app:layout_constraintTop_toBottomOf="@+id/created_date_channel_text_view"
        tools:text="Количество клипов: 56" />

    <TextView
        android:id="@+id/identifier_channel_text_view"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/clip_count_text_view"
        app:layout_constraintStart_toStartOf="@+id/clip_count_text_view"
        app:layout_constraintTop_toBottomOf="@+id/clip_count_text_view"
        tools:text="Идентификатор: ySDyADSyuiHDADSadadsadShk=" />
</androidx.constraintlayout.widget.ConstraintLayout>